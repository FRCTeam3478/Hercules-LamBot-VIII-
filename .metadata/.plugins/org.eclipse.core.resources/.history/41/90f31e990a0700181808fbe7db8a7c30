package org.lambot3478.autonomous_steps;

import org.lambot3478.autonomous_step.AutonomousStep;

import com.ctre.phoenix.motorcontrol.ControlMode;

import edu.wpi.first.wpilibj.Timer;

public class Wait extends AutonomousStep{

	private Timer timer;
	private double time;
	
	public Wait(double time){
		this.time=time;
	}
	@Override
	public void start() {
		timer=new Timer();
		timer.start();
	}

	@Override
	public void run() {
	}
	@Override
	public boolean isFinished() {
		if(timer==null){
			timer=new Timer();
			timer.start();
		}
		if(timer.get()<time)
			return false;
		return true;
	}


}
