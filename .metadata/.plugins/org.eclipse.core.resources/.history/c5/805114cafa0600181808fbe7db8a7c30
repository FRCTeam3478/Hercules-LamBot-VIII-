package org.lambot3478.autonomous_steps;

import org.lambot3478.autonomous_step.AutonomousStep_Drive;

import com.ctre.phoenix.motorcontrol.ControlMode;

import edu.wpi.first.wpilibj.Timer;

public class RotateDegrees extends AutonomousStep_Drive{
	private final double ROTATION_TOLERANCE=3.0;
	private final double AV_TOLERANCE=10.0;
	private double front;
	private double rotation;
	
	
	public RotateDegrees(double rotation){
		super();
		this.rotation=rotation;
	}
	@Override
	public void start() {
		front=heading.getRotation();
	}

	@Override
	public void run() {
		// Potencia de alineacion proporcional
		double rotationGain=((front+rotation)-heading.getRotation())/22.5;
		
		talons[0].set(ControlMode.PercentOutput,-rotationGain);
		talons[1].set(ControlMode.PercentOutput,rotationGain);
		talons[2].set(ControlMode.PercentOutput,-rotationGain);
		talons[3].set(ControlMode.PercentOutput,rotationGain);
	}
	@Override
	public boolean isFinished() {
		if(Math.abs((front+rotation)-heading.getRotation())>ROTATION_TOLERANCE||heading.getAngularVel()>AV_TOLERANCE){
			return false;
		}
		return true;
	}

}