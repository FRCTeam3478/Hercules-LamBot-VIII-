package org.lambot3478.autonomous_steps;

import org.lambot3478.autonomous_step.AutonomousStep_Drive;

import com.ctre.phoenix.motorcontrol.ControlMode;

import edu.wpi.first.wpilibj.Timer;

public class RotateTime extends AutonomousStep_Drive{
	private Timer timer;
	private double power;
	private double time;
	
	public RotateTime(double rotationPower,double time){
		// Inicializar los
		super();
		this.power=rotationPower;
		this.time=time;
	}
	@Override
	public void start() {
		timer=new Timer();
		timer.start();
	}

	@Override
	public void run() {
		talons[0].set(ControlMode.PercentOutput,-power);
		talons[1].set(ControlMode.PercentOutput,power);
		talons[2].set(ControlMode.PercentOutput,-power);
		talons[3].set(ControlMode.PercentOutput,power);
	}
	@Override
	public boolean isFinished() {
		if(timer==null){
			timer=new Timer();
			timer.start();
		}
		if(timer.get()<time)
			return false;
		return true;
	}

}