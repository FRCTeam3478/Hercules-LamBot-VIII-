	public Joystick Stick1; //declara un joystick
	public Joystick Stick2; //declara un joystick
	/////////////////////////////////////////////////
	
	/************* 1 end ************************/
	
	
	/************* 2 start ************************/
	
	
	/************* 2 end ************************/
	
	
	/************* 3 start ************************/
	
	
	/************* 3 end ************************/
	
	
	/************* 4 start ************************/
	
	
	/************* 4 end ************************/
	
	
	/************* 5 start ************************/
	
	
